# Example .clang-format file

# Set the base style to use. Options include:
# LLVM, Google, Chromium, Microsoft, Mozilla, WebKit
BasedOnStyle: Google

# Control the use of tabs and spaces for indentation
IndentWidth: 4
TabWidth: 4
UseTab: Never

# Control the alignment of function declarations
AlignTrailingComments: true
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: Consecutive

# Control the placement of braces
BreakBeforeBraces: Allman

# Control the column width where lines should be wrapped
ColumnLimit: 100

# Control the wrapping of function definitions and function calls
AlwaysBreakAfterReturnType: TopLevel
AlwaysBreakBeforeMultilineStrings: true
AllowShortFunctionsOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false

# Control the formatting of preprocessor directives
SpaceBeforeParens: ControlStatements
SpaceAfterCStyleCast: true

# Control the indentation of case labels in switch statements
IndentCaseLabels: true

# Control the wrapping of blocks and assignments
BinPackArguments: false
BinPackParameters: false
BreakConstructorInitializersBeforeComma: true
BreakConstructorInitializers: BeforeComma

# Additional configurations for readability and style
PointerAlignment: Left
ReflowComments: true
SortIncludes: true
SpaceBeforeCpp11BracedList: true
SpacesInParentheses: false
SpacesInAngles: false

# Control the placement of commas and semicolons
TrailingComma: None
AllowAllParametersOfDeclarationOnNextLine: false

# Control the style of line comments
CommentPragmas: "^ IWYU pragma:" # This preserves IWYU pragmas
